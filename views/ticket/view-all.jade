extends ../layout 

mixin ticketfunc(ticketObj)
    tr
        td(width="15%")= ticketObj.problemTitle
        td(width="15%")= ticketObj.projectName
        td
            ul
                for tag in ticketObj.problemTags
                    li= tag
        td(width="15%")= ticketObj.status
        td(width="10%")
            a(id="details-link", href='view?id='+ticketObj.id)
                svg(id="open-view", x="0", y="0", width="100%", height="40px")
                    rect(width="100%", height="100%", x="0", y="0")
                    text(x="50%", y="60%") Details

mixin backButton()
    if(prevPage != 0)
        td
            a(class="page-button", id="back", href="/ticket/view-all?page=" + prevPage) Back
mixin nextButton()
    if(tickets.length == 10)
        td
            a(class="page-button", id="next", href="/ticket/view-all?page=" + nextPage) Next 

block content
    h1 Available tickets
    table(id="tickets-table")
        th Title
        th Project Name
        th Tags
        th Status
        th
        for ticket in tickets
            +ticketfunc(ticket)
        tr
            +backButton()
            +nextButton()
   
   