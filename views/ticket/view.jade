extends ../layout 

block content
	form(id="view-ticket")
		div(class="ticket-section" id="heading") 
			h1 Title: 
			table
				tr(class="ticket-field" id="problem-title")
						td= "Title: " + ticket.problemTitle
		div(class="ticket-section" id="heading") 
			h1 Tags: 
			table
				tr(class="ticket-field" id="problem-tags")
						td= "Tags: " + ticket.problemTags
		div(class="ticket-section" id="details") 
			h1 Details: 
			table
				tr(class="ticket-field" id="hacker-name")
						td= "Hacker name: " + ticket.hackerName
				tr(class="ticket-field" id="project-name")
						td= "Project name: " + ticket.projectName
				tr(class="ticket-field" id="issue-description")
						td= "Description: " + ticket.problemDescription
				tr(class="ticket-field" id="location-description")
						td= "Location:" + ticket.hackerLocation
				tr(class="ticket-field" id="phone-number")
						td= "Phone number: " + ticket.hackerPhoneNumber
				tr(class="ticket-field" id="status-field")
					td Status:
						select(id="status-dropdown")
							option(value="Open") Open
							option(value="Claimed by mentor") Claimed by mentor
							option(value="Closed") Closed
						input(id="submit-change", class="nav-button", type="submit", value="Submit change")
